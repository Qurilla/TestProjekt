<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nextbike.testprojekt.FirstActivity">


    <Button
        android:id="@+id/startButton"
        android:layout_width="102dp"
        android:layout_height="94dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:onClick="startSecondScreen"
        android:text="EN"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="844dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="102dp"
        android:layout_height="94dp"
        android:onClick="startSecondScreenDE"
        android:text="DE"
        android:textSize="30dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/startButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/startButton"
        app:layout_constraintHorizontal_bias="0.444"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/startButton" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="714dp"
        android:layout_height="383dp"
        app:srcCompat="@mipmap/nextbike_logo_circle"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>
